{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/students-patch.schema.json",
    "type": "object",
    "title": "The Student Schema",
    "description": "This schema is used to validate HTTP [PATCH] operations.",
    "default": {},
    "examples": [
        {
            "firstName": "Tony",
            "lastName": "Stark",
            "dateOfBirth": "01/01/1970",
            "emailAddress": "tstark@avengers.io",
            "profileImageURL": "https://placeholder.com/300",
            "anticipatedGraduationDate": "05/25/2024",
            "enrolledAt": "P.S. 118"
        }
    ],
    "anyOf": [
        {
            "required": [
                "firstName"
            ]
        },
        {
            "required": [
                "lastName"
            ]
        },
        {
            "required": [
                "dateOfBirth"
            ]
        },
        {
            "required": [
                "emailAddress"
            ]
        },
        {
            "required": [
                "profileImageURL"
            ]
        },
        {
            "required": [
                "anticipatedGradudationDate"
            ]
        },
        {
            "required": [
                "enrolledAt"
            ]
        }
    ],
    "additionalProperties": false,
    "properties": {
        "firstName": {
            "$id": "#/properties/firstName",
            "type": "string",
            "title": "The firstName schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Tony"
            ]
        },
        "lastName": {
            "$id": "#/properties/lastName",
            "type": "string",
            "title": "The lastName schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Stark"
            ]
        },
        "dateOfBirth": {
            "$id": "#/properties/dateOfBirth",
            "type": "string",
            "title": "The dateOfBirth schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "01/01/1970"
            ]
        },
        "emailAddress": {
            "$id": "#/properties/emailAddress",
            "type": "string",
            "title": "The emailAddress schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "tstark@avengers.io"
            ]
        },
        "profileImageURL": {
            "$id": "#/properties/profileImageURL",
            "type": "string",
            "title": "The profileImageURL schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "https://placeholder.com/300"
            ]
        },
        "anticipatedGraduationDate": {
            "$id": "#/properties/anticipatedGraduationDate",
            "type": "string",
            "title": "The anticipatedGraduationDate schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "05/25/2024"
            ]
        },
        "enrolledAt": {
            "$id": "#/properties/enrolledAt",
            "type": "string",
            "title": "The enrolledAt schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "P.S. 118"
            ]
        }
    }
}